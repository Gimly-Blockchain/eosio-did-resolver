{
  "name": "eosio-did-resolver",
  "author": "Jack Tanner <jack@gimly.io>",
  "version": "0.1.6",
  "license": "Apache-2.0",
  "description": "Resolve Decentralized Identifier (DID) documents based on EOSIO blockchains",
  "keywords": [
    "eosio",
    "did",
    "ssi",
    "resolver"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:Gimly-Blockchain/eosio-did-resolver.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "eosio-did-chain-registry.json"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/eosio-did-resolver.esm.js",
  "size-limit": [
    {
      "path": "dist/eosio-did-resolver.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/eosio-did-resolver.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/elliptic": "^6.4.12",
    "@types/node-fetch": "^2.5.10",
    "asn1.js": "^5.4.1",
    "did-resolver": "^3.1.0",
    "husky": "^6.0.0",
    "node-fetch": "^2.6.1",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "base64url": "^3.0.1",
    "eosjs": "^21.0.4"
  }
}